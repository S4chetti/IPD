@model List<Forum.Entity.Models.Question>

@{
    ViewData["Title"] = "Ana Sayfa";
}

<div class="text-center mb-5">
    <h1 class="display-4 font-weight-bold text-primary">IPD FORUM</h1>
    <p class="lead text-muted">Topluluğun buluşma noktası</p>
</div>

<div class="d-flex justify-content-between align-items-center mb-4">
    <h3 class="text-gray-800">Forum Konuları</h3>
    <a href="/Question/Create" class="btn btn-success btn-lg shadow-sm">
        <i class="fas fa-plus-circle mr-2"></i>Yeni Konu Aç
    </a>
</div>

<div class="row">
    <div class="col-lg-12">

        @if (Model.Count > 0)
        {
            @foreach (var item in Model)
            {
                <div class="card shadow mb-4 border-left-primary">
                    <div class="card-header py-3 d-flex flex-row align-items-center justify-content-between bg-light">

                        <span class="badge badge-primary px-3 py-2" style="font-size: 0.9rem;">
                            <i class="fas fa-tag mr-2"></i> @(item.Category?.Name ?? "Genel")
                        </span>

                        <small class="text-muted font-weight-bold">
                            <i class="far fa-clock mr-1"></i> @item.CreatedDate.ToString("dd.MM.yyyy")
                        </small>
                    </div>

                    <div class="card-body">
                        <h4 class="font-weight-bold">
                            <a href="/Home/Details/@item.Id" class="text-dark text-decoration-none">
                                @item.Title
                            </a>
                        </h4>

                        <p class="card-text text-secondary mt-2">
                            @if (item.Description.Length > 150)
                            {
                                @item.Description.Substring(0, 150) <text>...</text>
                            }
                            else
                            {
                                @item.Description
                            }
                        </p>

                        <hr>

                        <div class="d-flex justify-content-between align-items-center">

                            <div class="d-flex align-items-center">
                                <div class="btn btn-circle btn-sm btn-info mr-2">
                                    <i class="fas fa-user"></i>
                                </div>
                                <span class="font-weight-bold text-gray-800">
                                    @(item.User?.Name ?? item.User?.UserName ?? "Misafir")
                                </span>
                            </div>

                            <div>
                                <span class="mr-3 text-muted small font-weight-bold">
                                    <i class="fas fa-comment-alt mr-1"></i> @(item.Comments?.Count ?? 0) Yorum
                                </span>
                                <a href="/Home/Details/@item.Id" class="btn btn-primary btn-sm px-3">
                                    Oku &rarr;
                                </a>
                            </div>
                        </div>
                    </div>
                </div>
            }
        }
        else
        {
            <div class="alert alert-info text-center py-5 shadow-sm">
                <h4><i class="fas fa-info-circle mr-2"></i>Henüz hiç konu açılmamış.</h4>
                <p>İlk konuyu açarak topluluğu başlat!</p>
                <a href="/Question/Create" class="btn btn-primary mt-3">Konu Oluştur</a>
            </div>
        }

    </div>
</div>