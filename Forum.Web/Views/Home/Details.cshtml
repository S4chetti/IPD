@model Forum.Entity.Models.Question

@{
    ViewData["Title"] = Model.Title;
}

<div class="container mt-4">

    <div class="card shadow mb-4">
        <div class="card-header py-3 d-flex flex-row align-items-center justify-content-between">
            <h5 class="m-0 font-weight-bold text-primary">@Model.Title</h5>

            <span class="badge badge-primary px-3 py-2" style="font-size: 0.9rem;">
                <i class="fas fa-tag mr-2"></i> @(Model.Category?.Name ?? "Genel")
            </span>
        </div>

        <div class="card-body">
            <div class="mb-4 text-muted small border-bottom pb-2">
                <i class="fas fa-user"></i>
                <span class="font-weight-bold text-dark mx-1">
                    @(Model.User?.Name ?? Model.User?.UserName ?? "Misafir")
                </span>
                <span class="mx-2">|</span>
                <i class="fas fa-clock"></i> @Model.CreatedDate.ToString("dd MMMM yyyy HH:mm")
            </div>

            <div class="question-content text-dark mb-4" style="font-size: 1.1rem; line-height: 1.6;">
                @if (!string.IsNullOrEmpty(Model.Description))
                {
                    @Model.Description
                }
                else
                {
                    <span class="text-muted font-italic">Bu soru için açıklama girilmemiş.</span>
                }
            </div>

            @if (!string.IsNullOrEmpty(Model.ImageName))
            {
                <div class="text-center mt-4 p-3 bg-light rounded border">
                    <img src="~/img/questions/@Model.ImageName" class="img-fluid rounded shadow-sm" style="max-height: 500px;" alt="Soru Görseli">
                </div>
            }
        </div>
    </div>

    <div class="card shadow mb-4">
        <div class="card-header py-3">
            <h6 class="m-0 font-weight-bold text-secondary">
                Yorumlar / Cevaplar
            </h6>
        </div>

        <div class="card-body" id="commentList">
            @if (Model.Comments != null && Model.Comments.Count > 0)
            {
                @foreach (var comment in Model.Comments)
                {
                    <div class="media mb-3 pb-3 border-bottom">
                        <img class="mr-3 rounded-circle" src="~/sb-admin/img/undraw_profile.svg" style="width:40px;">
                        <div class="media-body">
                            <h6 class="mt-0 font-weight-bold">
                                @(comment.User?.Name ?? comment.User?.UserName ?? "Kullanıcı")
                                <small class="text-muted ml-2">@comment.CreatedDate.ToString("dd.MM.yyyy HH:mm")</small>
                            </h6>
                            <p class="text-dark">@comment.Content</p>
                        </div>
                    </div>
                }
            }
            else
            {
                <div id="noCommentAlert" class="alert alert-light text-center">
                    Henüz yorum yapılmamış. İlk cevabı sen yaz!
                </div>
            }
        </div>
    </div>

    @if (User.Identity.IsAuthenticated)
    {
        <div class="card shadow mb-4">
            <div class="card-body">
                <h5 class="card-title">Cevap Yaz</h5>
                <form id="commentForm">
                    <input type="hidden" name="QuestionId" value="@Model.Id" />
                    <div class="form-group">
                        <textarea name="Content" id="commentContent" class="form-control" rows="4" placeholder="Düşüncelerini paylaş..." required style="resize: none;"></textarea>
                    </div>
                    <button type="submit" class="btn btn-primary">
                        Gönder
                    </button>
                </form>
            </div>
        </div>
    }
    else
    {
        <div class="alert alert-warning text-center shadow mb-4">
            Yorum yapmak için <a href="/Account/Login" class="font-weight-bold">Giriş Yap</a>malısınız.
        </div>
    }
</div>

@section Scripts {
    <script>
        $(document).ready(function () {
            $("#commentForm").submit(function (e) {
                e.preventDefault();

                var formData = $(this).serialize();

                $.ajax({
                    type: "POST",
                    url: "/Comment/Create",
                    data: formData,
                    success: function (response) {
                        if (response.success) {
                            $("#noCommentAlert").remove();

                            var newCommentHtml = `
                                <div class="media mb-3 pb-3 border-bottom animate__animated animate__fadeIn">
                                    <img class="mr-3 rounded-circle" src="/sb-admin/img/undraw_profile.svg" style="width:40px;">
                                    <div class="media-body">
                                        <h6 class="mt-0 font-weight-bold">
                                            ${response.userName}
                                            <small class="text-muted ml-2">${response.date}</small>
                                        </h6>
                                        <p class="text-dark">${response.content}</p>
                                    </div>
                                </div>`;

                            $("#commentList").append(newCommentHtml);
                            $("#commentContent").val("");
                        } else {
                            alert("Hata: " + response.message);
                        }
                    },
                    error: function () {
                        alert("Yorum gönderilirken bir hata oluştu.");
                    }
                });
            });
        });
    </script>
}