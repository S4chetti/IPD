@model Forum.Web.Models.RegisterViewModel

@{
    ViewData["Title"] = "Kayıt Ol";
}

<div class="container mt-5">
    <div class="row justify-content-center">
        <div class="col-md-6">
            <div class="card shadow-sm">
                <div class="card-header bg-success text-white">
                    <h4 class="mb-0"><i class="fas fa-user-plus"></i> Kayıt Ol</h4>
                </div>
                <div class="card-body">

                    @if (ViewBag.Error != null)
                    {
                        <div class="alert alert-danger">@ViewBag.Error</div>
                    }

                    <form asp-action="Register" method="post">

                        <div class="mb-3">
                            <label class="form-label">Ad Soyad</label>
                            <input asp-for="Name" class="form-control" placeholder="Adınız Soyadınız" />
                            <span asp-validation-for="Name" class="text-danger"></span>
                        </div>

                        <div class="mb-3">
                            <label class="form-label">E-Posta Adresi</label>
                            <input asp-for="Email" class="form-control" type="email" placeholder="ornek@email.com" />
                            <span asp-validation-for="Email" class="text-danger"></span>
                        </div>

                        <div class="mb-3">
                            <label class="form-label">Şifre</label>
                            <input asp-for="Password" class="form-control" type="password" />
                            <span asp-validation-for="Password" class="text-danger"></span>
                        </div>

                        <div class="mb-3">
                            <label class="form-label">Şifre Tekrar</label>
                            <input asp-for="ConfirmPassword" class="form-control" type="password" />
                            <span asp-validation-for="ConfirmPassword" class="text-danger"></span>
                        </div>

                        <button type="submit" class="btn btn-success w-100">Kayıt Ol</button>
                    </form>
                </div>
                <div class="card-footer text-center">
                    <small>Zaten hesabınız var mı? <a asp-action="Login">Giriş Yapın</a></small>
                </div>
            </div>
        </div>
    </div>
</div>