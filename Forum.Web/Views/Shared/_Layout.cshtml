@using Microsoft.AspNetCore.Identity
@using Forum.Entity.Models

@inject UserManager<User> UserManager

@{
    // Giriş yapan kullanıcının tüm bilgilerini veritabanından çekiyoruz
    User currentUser = null;
    if (User.Identity.IsAuthenticated)
    {
        currentUser = await UserManager.GetUserAsync(User);
    }
}


<!DOCTYPE html>
<html lang="tr">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - IPD Forum Sitesi</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <style>
        .forum-header { background-color: #3f51b5; color: white; padding: 20px 0; margin-bottom: 20px; }
        .forum-link { color: #555; font-weight: bold; }
        .forum-table { margin-top: 20px; }
    </style>
</head>
<body>

    <header class="forum-header">
        <div class="container d-flex justify-content-between align-items-center">
            <h1 class="h3"><a href="/" class="text-white text-decoration-none">📝 IPD FORUM</a></h1>
            <nav>
                @if (User.Identity.IsAuthenticated)
                {
                    <li class="nav-item dropdown no-arrow">
                        <a class="nav-link dropdown-toggle" href="#" id="userDropdown" role="button"
                           data-bs-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
                            <span class="mr-2 d-none d-lg-inline text-gray-600 small font-weight-bold">
                                @(User.Identity.IsAuthenticated? User.Identity.Name : "Misafir")
                            </span>
                            @if (User.Identity.IsAuthenticated)
                            {
                                <img class="img-profile rounded-circle border-2 border-primary p-1"
                                     src="~/img/undraw_profile.svg"
                                     style="width: 40px; height: 40px; object-fit: cover;">
                            }
                            else
                            {
                                <img class="img-profile rounded-circle" src="~/img/default-avatar.png">
                            }
                        </a>

                        <div class="dropdown-menu dropdown-menu-end shadow-lg animated--grow-in border-0 rounded-lg p-0"
                             aria-labelledby="userDropdown" style="min-width: 280px; overflow: hidden;">

                            <div class="bg-primary p-3 text-white text-center">
                                <div class="mb-2">
                                    <img class="img-fluid rounded-circle border border-white"
                                         src="~/img/undraw_profile.svg"
                                         style="width: 80px; height: 80px; object-fit: cover; border-width: 3px !important;">
                                </div>
                                <h6 class="font-weight-bold mb-0">@User.Identity.Name</h6>
                                <small class="text-white-50">Üye</small>
                            </div>

                            <div class="p-2">
                                <a class="dropdown-item rounded py-2 transition-3d-hover" href="/Account/Profile">
                                    <i class="fas fa-user fa-sm fa-fw mr-2 text-primary"></i>
                                    Profilimi Düzenle
                                </a>
                                <a class="dropdown-item rounded py-2 transition-3d-hover" href="#">
                                    <i class="fas fa-cogs fa-sm fa-fw mr-2 text-info"></i>
                                    Ayarlar
                                </a>
                                <div class="dropdown-divider"></div>
                                <a class="dropdown-item rounded py-2 text-danger transition-3d-hover" href="#" data-bs-toggle="modal" data-bs-target="#logoutModal">
                                    <i class="fas fa-sign-out-alt fa-sm fa-fw mr-2"></i>
                                    Çıkış Yap
                                </a>
                            </div>
                        </div>
                    </li>
                }
                else
                {
                    <li class="nav-item">
                        <a class="nav-link text-dark" href="/Account/Login">Giriş Yap</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link text-dark" href="/Account/Register">Kayıt Ol</a>
                    </li>
                }
            </nav>
        </div>
    </header>

    <div class="container">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>

    <footer class="border-top footer text-muted mt-5">
        <div class="container">
            &copy; 2025 - IPD Forum Projesi
        </div>
    </footer>

    <script src="~/lib/jquery/dist/jquery.min.js"></script>

    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>

    <script src="~/sb-admin/js/sb-admin-2.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>

    @await RenderSectionAsync("Scripts", required: false)

    <div class="modal fade" id="logoutModal" tabindex="-1" role="dialog" aria-labelledby="exampleModalLabel"
         aria-hidden="true">
        <div class="modal-dialog" role="document">
            <div class="modal-content">
                <div class="modal-header">
                    <h5 class="modal-title" id="exampleModalLabel">Ayrılmaya Hazır mısın?</h5>
                    <button class="close" type="button" data-dismiss="modal" aria-label="Close">
                        <span aria-hidden="true">×</span>
                    </button>
                </div>
                <div class="modal-body">Mevcut oturumunuzu sonlandırmak için "Çıkış Yap" butonuna basınız.</div>
                <div class="modal-footer">
                    <button class="btn btn-secondary" type="button" data-dismiss="modal">İptal</button>
                    <a class="btn btn-primary" asp-controller="Account" asp-action="Logout">Çıkış Yap</a>
                </div>
            </div>
        </div>
    </div>
</body>
</html>