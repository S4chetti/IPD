<!DOCTYPE html>
<html lang="tr">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - IPD Forum Sitesi</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <style>
        .forum-header { background-color: #3f51b5; color: white; padding: 20px 0; margin-bottom: 20px; }
        .forum-link { color: #555; font-weight: bold; }
        .forum-table { margin-top: 20px; }
    </style>
</head>
<body>

    <header class="forum-header">
        <div class="container d-flex justify-content-between align-items-center">
            <h1 class="h3"><a href="/" class="text-white text-decoration-none">📝 IPD FORUM</a></h1>
            <nav>
                @if (User.Identity.IsAuthenticated)
                {
                    <span class="text-white me-3">Hoş geldin, @User.Identity.Name!</span>

                    @if (User.IsInRole("Admin"))
                    {
                        <a asp-area="Admin" asp-controller="Category" asp-action="Index" class="btn btn-sm btn-danger me-2">
                            ⚙️ Yönetici Paneli
                        </a>
                    }

                    <a asp-controller="Account" asp-action="Logout" class="btn btn-sm btn-outline-light">Çıkış Yap</a>
                }
                else
                {
                    <a asp-controller="Account" asp-action="Login" class="btn btn-sm btn-light">Giriş Yap</a>
                    <a asp-controller="Account" asp-action="Register" class="btn btn-sm btn-outline-light ms-2">Kayıt Ol</a>
                }
            </nav>
        </div>
    </header>

    <div class="container">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>

    <footer class="border-top footer text-muted mt-5">
        <div class="container">
            &copy; 2025 - IPD Forum Projesi
        </div>
    </footer>

    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>

    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>